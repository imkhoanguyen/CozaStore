@model Color
<content>
    <h3>Edit Color</h3>
    <form method="post" class="row mt-3">
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="color" asp-for="Name" class="form-control ms-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2 pe-1">
            <a asp-controller="color" asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </form>
</content>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}