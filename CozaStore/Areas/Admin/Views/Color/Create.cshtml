@model Color

<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3">Create Color Page</h1>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Create Color</h5>
                    </div>
                    <div class="card-body">
                        <content>
                            <form method="post" class="row mt-3">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Code" class="form-label"></label>
                                    <input type="color" asp-for="Code" class="form-control" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-controller="color" asp-action="Index" class="btn btn-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </content>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}