@using CozaStore.Data
@model PagedList<Color>
@section Styles {
    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/color-baged.css" />
}

<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3">Color Page</h1>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header text-end">
                        <a asp-controller="color" asp-action="create" class="btn btn-primary">
                            <i class="fa-sharp fa-light fa-plus"></i> Add Color
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="get" asp-controller="color" asp-action="Index" class="row">
                            <div class="col-6">
                                <input name="PageSize" class="form-control" style="max-width: 10%;" value="@ViewData["pageSize"]" />
                            </div>
                            <div class="col-6 text-end">
                                <div class="d-flex gap-2">
                                    <input type="text" name="SearchString" class="form-control"
                                           placeholder="Enter name or id of color"
                                           value="@ViewData["searchString"]" />
                                    <button type="submit" style="width: 48px;" class="rounded btn btn-outline-dark p-0">
                                        <i class="fa-regular fa-magnifying-glass"></i>
                                    </button>
                                    <a asp-controller="color" asp-action="Index" style="width: 48px;" class="rounded btn btn-outline-dark px-0">
                                        <i class="fa-sharp fa-regular fa-arrow-rotate-right"></i>
                                    </a>
                                </div>
                            </div>
                        </form>

                        <div class="table-responsive text-nowrap mt-3">
                            <table class="table">
                                <thead>
                                    <tr class="fw-bold">
                                        <td style="width: 10%;">ID</td>
                                        <td>Name</td>
                                        <td style ="width: 30%;">Code</td>
                                        <td style="width: 10%;">Actions</td>
                                    </tr>
                                </thead>
                                <tbody class="align-middle table-border-bottom-0">
                                    @if (Model != null)
                                    {
                                        @foreach (var color in Model)
                                        {
                                            <tr>
                                                <td>@color.Id</td>
                                                <td>
                                                    <div class="d-flex gap-2">
                                                        <div class="color-baged" style="background-color: @color.Code;"></div>
                                                        <div>@color.Name</div>
                                                    </div>
                                                </td>
                                                <td>@color.Code</td>
                                                <td>
                                                    <a asp-controller="color" asp-action="edit" asp-route-id="@color.Id" class="btn btn-sm btn-primary mx-1">
                                                        <i class="fa fa-pencil-alt"></i>
                                                    </a>
                                                    <a onclick="Delete(this,'/admin/color/delete/?id=@color.Id')"
                                                       class="btn btn-sm btn-danger mx-1">
                                                        <i class="fa-solid fa-trash-can"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        @if (Model != null)
                        {
                            @* paging *@

                            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                            var firstDisabled = Model.PageIndex <= 1 ? "disabled" : "";
                            var lastDisabled = Model.PageIndex == Model.TotalPages ? "disabled" : "";


                            <div class="row mt-3">
                                <ul class="pagination justify-content-center">
                                    <li class="mx-1 page-item @firstDisabled">
                                        <a class="rounded page-link"
                                           asp-route-SearchString="@ViewData["searchString"]"
                                           asp-route-PageNumber="1"
                                           asp-route-PageSize="@ViewData["pageSize"]">
                                            <span>First</span>
                                        </a>
                                    </li>
                                    <li class="mx-1 page-item @prevDisabled">
                                        <a class="rounded page-link"
                                           asp-route-SearchString="@ViewData["searchString"]"
                                           asp-route-PageNumber="@(Model.PageIndex - 1)"
                                           asp-route-PageSize="@ViewData["pageSize"]">
                                            <i class="fa-regular fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="mx-1 page-item">
                                            <a class="rounded page-link @(Model.PageIndex == i ? "active" : "")"
                                               asp-route-SearchString="@ViewData["searchString"]"
                                               asp-route-PageNumber="@(i)"
                                               asp-route-PageSize="@ViewData["pageSize"]"
                                               data-page="@(i)">@i</a>
                                        </li>
                                    }
                                    <li class="mx-1 page-item @nextDisabled">
                                        <a class="rounded page-link"
                                           asp-route-SearchString="@ViewData["searchString"]"
                                           asp-route-PageNumber="@(Model.PageIndex + 1)"
                                           asp-route-PageSize="@ViewData["pageSize"]">
                                            <i class="fa-regular fa-chevron-right"></i>
                                        </a>
                                    </li>
                                    <li class="mx-1 page-item @lastDisabled">
                                        <a class="rounded page-link"
                                           asp-route-SearchString="@ViewData["searchString"]"
                                           asp-route-PageNumber="@(Model.TotalPages)"
                                           asp-route-PageSize="@ViewData["pageSize"]">
                                            <span>Last</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>



@section Scripts {
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/paging.js"></script>
    <script>
        function Delete(element, url) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (response) {
                            if (response.success === false) {
                                toastr.error(response.message);
                            } else {
                                // Use closest('tr') to find and remove the table row containing the delete button
                                $(element).closest('tr').remove();
                                toastr.success(response.message);
                                }
                                },
                                error: function (xhr, status, error) {
                                    toastr.error('An error occurred: ' + xhr.statusText);
                                }
                            });
                        }
                    });
                }
    </script>
}