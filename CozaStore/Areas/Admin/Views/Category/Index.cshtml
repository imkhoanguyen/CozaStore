@model PagedList<Category>
@section Styles {
    <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
}

<content>
    <h3 class="mb-3 text-primary">List Category</h3>
    <div class="row">
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
        <div class="col-6 text-end">
            <form method="get" asp-controller="Category" asp-action="Index" >
                <div class="d-flex gap-2">
                    <input type="text" name="searchString" class="form-control" 
                    placeholder="Enter name or id of category"
                           value="@ViewData["SearchString"]" />
                    <button type="submit" style="width: 48px;" class="rounded btn btn-outline-dark p-0" >
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <a asp-controller="Category" asp-action="Index" style="width: 48px;" class="rounded btn btn-info px-0">
                        <i class="fa-solid fa-arrows-rotate"></i>
                    </a>
                </div>
                
            </form>
        </div>
    </div>
    
    <div class="table-responsive text-nowrap mt-3">
        <table class="table">
            <thead>
                <tr class="fw-bold">
                    <td style="width: 10%;">ID</td>
                    <td style="width: 60%;">Name</td>
                    <td>Status</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody class="align-middle table-border-bottom-0">
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        @if (@category.IsDelete)
                        {
                            <td>
                                <span class="badge bg-label-danger me-1">Deleted</span>
                            </td>
                            <td style="color: #fff">
                                <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id" class="btn btn-warning mx-1">Edit</a>
                                <a onclick="RevertCategory('/admin/category/delete/?categoryId=@category.Id')"
                                   class="btn btn-info mx-1">
                                    Revert
                                </a>
                            </td>
                        } else
                        {
                            <td>
                                <span class="badge bg-label-primary me-1">Active</span>
                            </td>
                            <td style="color: #fff">
                                <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id" class="btn btn-warning mx-1">Edit</a>
                                <a onclick="DeleteCategory('/admin/category/delete/?categoryId=@category.Id')"
                                   class="btn btn-danger mx-1">
                                    Delete
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* paging *@
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        var firstDisabled = Model.PageIndex <= 1 ? "disabled" : "";
        var lastDisabled = Model.PageIndex == Model.TotalPages ? "disabled" : "";

    }
    <div class="row mt-3">
        <ul class="pagination justify-content-center">
            <li class="mx-1 page-item @firstDisabled">
                <a class="rounded page-link"
                    asp-route-page="1"
                   asp-route-searchString="@ViewData["SearchString"]">
                    <span>First</span>
                </a>
            </li>
            <li class="mx-1 page-item @prevDisabled">
                <a class="rounded page-link" asp-route-page="@(Model.PageIndex - 1)">
                    <i class="fa-solid fa-chevron-left"></i>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="mx-1 page-item">
                    <a class="rounded page-link @(Model.PageIndex == i ? "active" : "")"
                    asp-route-page="@(i)"
                    asp-route-searchString="@ViewData["SearchString"]"
                    > @i</a>
                </li>
            }
            <li class="mx-1 page-item @nextDisabled">
                <a class="rounded page-link"
                asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-searchString="@ViewData["SearchString"]">
                    <i class="fa-solid fa-chevron-right"></i>
                </a>
            </li>
            <li class="mx-1 page-item @lastDisabled">
                <a class="rounded page-link" 
                asp-route-page="@(Model.TotalPages)"
                   asp-route-searchString="@ViewData["SearchString"]"
                >
                    <span>Last</span>
                </a>
            </li>
        </ul>
    </div>
    
</content>


@section Scripts {
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script>
        function DeleteCategory(url) {
            Swal.fire({
                title: 'Are you sure?',
                // text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'post',
                        success: function () {
                            window.location.reload();
                        }
                    })
                }
            })
        }

        function RevertCategory(url) {
            Swal.fire({
                title: 'Are you sure?',
                // text: "You won't be able to revert this!",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, revert it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'post',
                        success: function () {
                            window.location.reload();
                        }
                    })
                }
            })
        }

    </script>
}