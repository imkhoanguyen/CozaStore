@model Category
<content>
    <h3>Cập nhật danh mục sản phẩm</h3>
    <form method="post" class="row mt-3">
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control ms-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2 pe-1">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Trở lại</a>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>

    </form>
</content>