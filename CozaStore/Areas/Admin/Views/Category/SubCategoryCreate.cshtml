@model SubCategoryVM
<content>
    <h3>Thêm danh mục con</h3>
    <form method="post" class="row mt-3">
        <input hidden asp-for="CategoryId" />
        <div class="mb-3">
            <label asp-for="SubCategory.Name" class="form-label"></label>
            <input asp-for="SubCategory.Name" class="form-control ms-2" />
            <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2 pe-1">
            <a asp-controller="Category" asp-action="SubCategory"
               asp-route-categoryId="@Model.CategoryId"
               class="btn btn-secondary">Trở lại</a>
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
    </form>
</content>