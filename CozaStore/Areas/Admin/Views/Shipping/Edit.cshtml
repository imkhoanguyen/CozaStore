@model ShippingMethod
<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3">Edit Shipping Method Page</h1>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Edit Shipping Method</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" class="row">
                            <div class="text-danger" asp-validation-summary="All"></div>
                            <input hidden asp-for="Id" />
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Cost" class="form-label"></label>
                                <input asp-for="Cost" class="form-control" />
                                <span asp-validation-for="Cost" class="text-danger"></span>
                            </div>
                            <div class="mb-3">

                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>

                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-controller="shipping" asp-action="Index" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/js/tinymceSettings.js"></script>
}